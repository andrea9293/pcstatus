<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="8.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="pcstatus.Controller">
    <!-- <Label fx:id="ipText" text="IP" VBox.vgrow="ALWAYS"/> -->
    <VBox fx:id="mainVbox" alignment="TOP_LEFT" VBox.vgrow="ALWAYS">
        <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS" spacing="8.0">
            <ImageView fitHeight="75.0" fitWidth="75.0" pickOnBounds="true" preserveRatio="true" VBox.vgrow="ALWAYS">
                <Image url="@Images/System Task_96px.png"/>
            </ImageView>
            <VBox alignment="TOP_LEFT" VBox.vgrow="ALWAYS">
                <Label text="System Information" textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="20.0"/>
                    </font>
                </Label>
                <Label fx:id="systemText" text="systemText" VBox.vgrow="ALWAYS"/>
            </VBox>
        </HBox>
        <Separator minHeight="-Infinity" minWidth="-Infinity" orientation="HORIZONTAL" prefHeight="20.0"
                   prefWidth="200.0"/>
        <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS" spacing="8.0">
            <ImageView fitHeight="75.0" fitWidth="75.0" pickOnBounds="true" preserveRatio="true" VBox.vgrow="ALWAYS">
                <Image url="@Images/battery/Charging Battery_96px.png"/>
            </ImageView>
            <VBox alignment="TOP_LEFT" VBox.vgrow="ALWAYS">
                <Label text="Battery" textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="20.0"/>
                    </font>
                </Label>
                <Label fx:id="batteryText" text="Battery" VBox.vgrow="ALWAYS"/>
            </VBox>
        </HBox>
        <Separator minHeight="-Infinity" minWidth="-Infinity" orientation="HORIZONTAL" prefHeight="20.0"
                   prefWidth="200.0"/>
        <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS" spacing="8.0">
            <ImageView fx:id="cpuImage" fitHeight="75.0" fitWidth="75.0" pickOnBounds="true" preserveRatio="true"
                       VBox.vgrow="ALWAYS">
                <Image url="@Images/Processor_96px.png"/>
            </ImageView>
            <VBox alignment="TOP_LEFT" VBox.vgrow="ALWAYS">
                <Label text="CPU" textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="20.0"/>
                    </font>
                </Label>
                <Label fx:id="cpuText" text="CPU"/>
            </VBox>
        </HBox>
        <Separator minHeight="-Infinity" minWidth="-Infinity" orientation="HORIZONTAL" prefHeight="20.0"
                   prefWidth="200.0"/>
        <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS" spacing="8.0">
            <ImageView fitHeight="75.0" fitWidth="75.0" pickOnBounds="true" preserveRatio="true" VBox.vgrow="ALWAYS">
                <Image url="@Images/HDD_96px.png"/>
            </ImageView>
            <VBox alignment="TOP_LEFT" VBox.vgrow="ALWAYS">

                <Label text="Disks" textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="20.0"/>
                    </font>
                </Label>
                <Label fx:id="disksText" text="Disks"/>
            </VBox>
        </HBox>
        <Separator minHeight="-Infinity" minWidth="-Infinity" orientation="HORIZONTAL" prefHeight="20.0"
                   prefWidth="200.0"/>
        <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS" spacing="8.0">
            <ImageView fitHeight="75.0" fitWidth="75.0" pickOnBounds="true" preserveRatio="true" VBox.vgrow="ALWAYS">
                <Image url="@Images/Speedometer_96px.png"/>
            </ImageView>
            <VBox alignment="TOP_LEFT" VBox.vgrow="ALWAYS">
                <Label text="Miscellaneous" textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="20.0"/>
                    </font>
                </Label>
                <Label fx:id="miscellaneous" text="Miscellaneous"/>
            </VBox>
        </HBox>
        <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
        </padding>
    </VBox>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</VBox>
